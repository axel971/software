#include "LevelPyramide.h"




void LevelPyramide::build(cv::Mat image, double sigma, double k, int octave, int level, bool isFirstOctaveElmt)
// don't delete the following line as it's needed to preserve source code of this autogenerated element
// section 127-0-1-1--3a3deb87:148a6b1652a:-8000:0000000000000896 begin
{
  Mat resImage;

  if(isFirstOctaveElmt)
    {
      //downsampling factor is equal at 1./(actual octave)
      resize(image,resImage, size(), 1./octave, 1./octave, CV_INTER_LINEAR);
    }
  else
    {
      Mat tmpImage;
      resize(image,tmpImage, size(), 1./octave, 1./octave, CV_INTER_LINEAR);
      gaussianBlur(tmpImage, resImage, size(), pow(k,level)*sigma, pow(k,level)*sigma,BORDER_REPLICATE);
    }
  
  m_image = resImage;
}
// section 127-0-1-1--3a3deb87:148a6b1652a:-8000:0000000000000896 end
// don't delete the previous line as it's needed to preserve source code of this autogenerated element

